{
    "name": "Baekjoon Companion",
    "description": "Useful tools for baekjoon",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "https://www.acmicpc.net/problem/*"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "tabs"

    ],
    "page_action": {
        "default_popup": "popup.html"
    },
    "options_ui": {
        "open_in_tab" : true,
        "page": "options.html"
    }
}