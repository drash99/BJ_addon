{
    "name": "Baekjoon Companion",
    "description": "Useful tools for baekjoon",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["https://www.acmicpc.net/problem/*"],
            "js": ["content_script.js"]
        }
    ],
    "permissions": ["storage", "activeTab", "scripting", "declarativeContent"],
    "action": {
      "default_popup": "popup.html"
    },
    "options_page": "options.html"
  }